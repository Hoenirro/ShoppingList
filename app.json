{
  "expo": {
    "name": "ShoppingList",
    "slug": "shoppinglist",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F2F7F4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.shoppinglist",
      "infoPlist": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Shopping List",
            "CFBundleTypeRole": "Editor",
            "LSItemContentTypes": [
              "com.shoppinglist.shoplist"
            ],
            "LSHandlerRank": "Owner"
          }
        ],
        "UTExportedTypeDeclarations": [
          {
            "UTTypeIdentifier": "com.shoppinglist.shoplist",
            "UTTypeDescription": "Shopping List",
            "UTTypeConformsTo": [
              "public.data",
              "public.content"
            ],
            "UTTypeTagSpecification": {
              "public.filename-extension": ["shoplist"],
              "public.mime-type": "application/octet-stream"
            }
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F2F7F4"
      },
      "package": "com.yourname.shoppinglist",
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "autoVerify": false,
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ],
          "data": [
            {
              "scheme": "file",
              "mimeType": "*/*",
              "pathPattern": ".*\\.shoplist"
            }
          ]
        },
        {
          "action": "android.intent.action.VIEW",
          "autoVerify": false,
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ],
          "data": [
            {
              "scheme": "content",
              "mimeType": "application/octet-stream"
            }
          ]
        },
        {
          "action": "android.intent.action.VIEW",
          "autoVerify": false,
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ],
          "data": [
            {
              "scheme": "content",
              "mimeType": "*/*",
              "pathPattern": ".*\\.shoplist"
            }
          ]
        }
      ],
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-file-system",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Shopping List to access your photos.",
          "cameraPermission": "Allow Shopping List to use your camera to take product photos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "437fd496-c693-4d83-a5a0-5c6f42cec573"
      }
    }
  }
}
